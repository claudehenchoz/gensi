# Example .gensi file
# This is a sample recipe for generating an EPUB from a blog

title = "Example Blog EPUB"
author = "Blog Author"
language = "en"

# Optional: Cover image
[cover]
url = "https://example.com/blog"
selector = "img.site-logo"

# Article index
# Note: 'name' is only required when you have multiple [[index]] sections
[[index]]
url = "https://example.com/blog/archive"
type = "html"
links = "article.post a.post-link"

# Default article extraction rules
[article]
content = "div.post-content"
title = "h1.post-title"
author = "span.author-name"
date = "time.published"
remove = [
    ".sidebar",
    ".comments",
    ".share-buttons"
]
# Optional: Control image retrieval (default: true)
# Set to false to skip image downloads and remove <img> tags
# images = false
